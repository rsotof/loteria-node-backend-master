{
  "name": "node-ejemplo",
  "version": "1.0.0",
  "description": "Example Node.js API for GitHub Actions testing",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:coverage": "jest --detectOpenHandles --coverage",
    "clean": "rimraf dist",
    "copy-files": "copyfiles -u 1 src/**/*.* dist && copyfiles package*.json dist",
    "build": "npm run clean && npm run copy-files",
    "start:prod": "node dist/server.js"
  },
  "keywords": [
    "node",
    "express",
    "api",
    "testing",
    "github-actions"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "copyfiles": "^2.4.1",
    "jest": "^29.5.0",
    "nodemon": "^3.1.10",
    "rimraf": "^5.0.0",
    "supertest": "^6.3.3"
  }
}
